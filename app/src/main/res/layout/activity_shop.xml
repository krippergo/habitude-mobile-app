<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="720px"
    android:layout_height="1430px"
    tools:context=".ActivityShop">

  <View
      android:id="@+id/view"
      android:layout_width="720px"
      android:layout_height="100px"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:background="#25457A"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="4dp"
      android:gravity="top"
      android:text="HabitHub"
      android:textColor="#FFFFFF"
      android:textSize="50px"
      app:layout_constraintBottom_toBottomOf="@+id/view"
      app:layout_constraintEnd_toEndOf="@+id/view"
      app:layout_constraintHorizontal_bias="0.041"
      app:layout_constraintStart_toStartOf="@+id/view"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.87" />

  <TextView
      android:onClick="goToConnect"
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="4dp"
      android:gravity="top"
      android:text="КОНТАКТ"
      android:textColor="#FFFFFF"
      android:textSize="58px"
      app:layout_constraintBottom_toBottomOf="@+id/view"
      app:layout_constraintEnd_toEndOf="@+id/view"
      app:layout_constraintHorizontal_bias="0.982"
      app:layout_constraintStart_toStartOf="@+id/view"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/money"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="20px"
      android:layout_marginTop="15px"
      android:text="у тебя 200 хаб-коинов"
      android:textColor="#000000"
      android:textSize="30px"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view"
      app:layout_constraintVertical_bias="0.0" />

  <View
      android:onClick="goToMenu"
      android:id="@+id/view2"
      android:layout_width="157px"
      android:layout_height="58px"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginLeft="198px"
      android:layout_marginTop="15px"
      android:background="#227E87"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.391"
      app:layout_constraintStart_toEndOf="@+id/money"
      app:layout_constraintTop_toBottomOf="@+id/view"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="2dp"
      android:text="назад"
      android:textColor="#FFFFFF"
      android:textSize="30px"
      app:layout_constraintBottom_toBottomOf="@+id/view2"
      app:layout_constraintEnd_toEndOf="@+id/view2"
      app:layout_constraintStart_toStartOf="@+id/view2"
      app:layout_constraintTop_toTopOf="@+id/view2" />


</androidx.constraintlayout.widget.ConstraintLayout>